# News Aggregator Environment Configuration

# Database Configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=securepassword123
MONGODB_URI=mongodb://admin:securepassword123@mongodb:27017/news-aggregator?authSource=admin

# Redis Configuration
REDIS_PASSWORD=redis123
REDIS_URL=redis://:redis123@redis:6379

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secure-refresh-token-secret
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-session-secret-key-change-this-in-production

# API Keys (Get from respective services)
NEWSAPI_KEY=your-newsapi-key-here
GUARDIAN_API_KEY=your-guardian-api-key-here
NYT_API_KEY=your-nyt-api-key-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Environment
NODE_ENV=development

# Port Configuration (for reference)
# BACKEND_PORT=4000
# FRONTEND_PORT=3000

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_SIZE=100

# News API Configuration
NEWS_CACHE_DURATION=1800
MAX_ARTICLES_PER_REQUEST=20